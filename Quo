<body>
  <h2>Launching OpenPhone...</h2>
  <p>If your app doesn't open automatically, tap the button below.</p>
  <a id="manual" class="btn" href="#">OpenPhone</a>
  <p class="muted">If you donâ€™t have OpenPhone installed you will be taken to their website.</p>

  <script>
    // Read query params
    const params = new URLSearchParams(window.location.search);
    const to   = params.get('number') || '';
    const from = params.get('from')   || '';

    // Build deep link
    const deep = 'openphone://dial?number=' + encodeURIComponent(to) +
                 '&from=' + encodeURIComponent(from) + '&action=call';

    // Set manual button href for users who need to click
    document.getElementById('manual').href = deep;

    // Try direct redirect
    setTimeout(function() {
      window.location.href = deep;
    }, 200);

    // Optional: after a short delay, go to website fallback
    setTimeout(function() {
      window.location.href = 'https://www.openphone.com';
    }, 2500);
  </script>
</body>
</html>
